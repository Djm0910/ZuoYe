<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="demo.example.com.chineseuniversitystudentsonline.ui.activity.MainActivity"
    android:orientation="vertical">


    <android.support.v7.widget.Toolbar
        android:id="@+id/ToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:text="中国大学生在线"
            android:textColor="#d52f1a"
            android:textSize="30dp" />

    </android.support.v7.widget.Toolbar>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="3dp"
        android:background="#d52f1a" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.design.widget.TabLayout
            android:id="@+id/TabLayout"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            app:tabTextColor="#2c74ab"
            style="@style/Base.Widget.Design.TabLayout."></android.support.design.widget.TabLayout>

        <Button
            android:id="@+id/Btn_add"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:text="+"
            android:background="#FFFFFF"/>

        <Button
            android:id="@+id/Btn_Night"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:text="黑夜"
            android:textColor="#000000"
            android:background="#FFFFFF"/>

        <Button
            android:id="@+id/Btn_Day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="白天"
            android:textColor="#FFFFFF"
            />

    </LinearLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/ViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>

</LinearLayout>
